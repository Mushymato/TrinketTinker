{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Format": "2.5.1",
  "ConfigSchema": {
    "EarlyTrinketSlot": {
      "AllowValues": "true, false",
      "Default": "false"
    }
  },
  "Changes": [
    {
      "LogName": "Sprites",
      "Action": "Load",
      "Target": "{{ModId}}/trinketbox",
      "FromFile": "assets/{{TargetWithoutPath}}.png"
    },
    // boxes
    {
      "Action": "Include",
      "FromFile": "data/box.json",
      "LocalTokens": {
        "L@Capacity": 2,
        "L@SheetIndex": 0,
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/box.json",
      "LocalTokens": {
        "L@Capacity": 3,
        "L@SheetIndex": 1,
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/box.json",
      "LocalTokens": {
        "L@Capacity": 4,
        "L@SheetIndex": 2,
      }
    },
    // trinket slot cheat
    {
      "Action": "Include",
      "FromFile": "data/early-trinket-slot.json"
    }
  ]
}