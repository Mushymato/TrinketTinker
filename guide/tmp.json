{
  // minimum ability level, used for display purposes
  // default 1
  // internally abilities are 0-indexed
  "MinLevel": 1,
  "Variants": [
    {
      "Texture": "Mods/{{ModId}}/rotation",
      "Width": 16,
      "Height": 16,
    },
  ],
  // Bounce motion: follows player, bounces around
  "Motions": [
    {
      "MotionClass": "Bounce",
      "AlwaysMoving": false,
      "DirectionMode": "R",
      "LoopMode": "PingPong",
      "AnimationFrameLength": 4,
      "Interval": 200,
      "LightRadius": 5,
    }
  ],
  "Abilities": [
    // level 1: heal 0.1~.5% of max hp and stamina while walking outside
    [
      {
        "Condition": "LOCATION_IS_OUTDOORS Target",
        "ProcOn": "Footstep",
        "ProcSound": "fairy_heal",
        "AbilityClass": "Health",
        "Args": {
          "Min": 0.1,
          "Max": 0.5
        }
      },
      {
        "Condition": "LOCATION_IS_OUTDOORS Target",
        "ProcOn": "Footstep",
        "AbilityClass": "Stamina",
        "Args": {
          "Min": 0.1,
          "Max": 0.5
        }
      }
    ],
    // level 2: heal 1~2% of max hp while walking outside
    [
      {
        // Heal the player a little as they walk outdoors
        "Condition": "LOCATION_IS_OUTDOORS Target",
        "ProcOn": "Footstep",
        "ProcSound": "fairy_heal",
        "AbilityClass": "Health",
        "Args": {
          "Min": 0.1,
          "Max": 0.2
        }
      },
      {
        // Heal the player a little as they walk outdoors
        "Condition": "LOCATION_IS_OUTDOORS Target",
        "ProcOn": "Footstep",
        "AbilityClass": "Stamina",
        "Args": {
          "Min": 0.1,
          "Max": 0.2
        }
      }
    ]
  ]
}