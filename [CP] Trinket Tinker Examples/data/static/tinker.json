{
  "Changes": [
    // Edit Mods/mushymato.TrinketTinker
    {
      "Action": "EditData",
      "Target": "{{mushymato.TrinketTinker/Target}}",
      "Entries": {
        // ID must match trinket
        "{{ModId}}_StaticDRUL": {
          "Id": "{{ModId}}_StaticDRUL",
          "Variants": [
            {
              "Texture": "Mods/{{ModId}}/drul",
              "Width": 16,
              "Height": 32
            },
          ],
          "Motions": [
            // Orbit around the player in a ellipse
            {
              "MotionClass": "Orbit",
              "AlwaysMoving": true,
              "DirectionMode": "DRUL",
              "AnimationFrameLength": 4,
              "Interval": 100,
            }
          ],
          "Abilities": [
            // level 0
            [
              {
                // Item drop ability 1, drops a gold quality salmon berry every 10 seconds
                "AbilityClass": "ItemDrop",
                "ProcOn": "Timer",
                "ProcTimer": 10000,
                "Args": {
                  "ItemId": "(O)296",
                  "StackSize": 2,
                  "Quality": 2
                }
              },
              {
                // Item drop ability 2, produces a random bone item when killing any enemy
                "AbilityClass": "ItemDrop",
                "ProcOn": "SlayMonster",
                "Args": {
                  "ItemQuery": "ALL_ITEMS",
                  "ItemQueryCondition": "ITEM_CONTEXT_TAG Target bone_item, !ITEM_CONTEXT_TAG Target id_o_881",
                }
              }
            ]
          ]
        },
        "{{ModId}}_StatiColorMask": {
          "Id": "{{ModId}}_StatiColorMask",
          "Variants": [
            // Prismatic
            {
              "Texture": "Mods/{{ModId}}/rotation-bw",
              "Width": 16,
              "Height": 16,
              "ColorMask": "Prismatic"
            },
            // Named color (https://docs.monogame.net/api/Microsoft.Xna.Framework.Color.html)
            {
              "Texture": "Mods/{{ModId}}/rotation-bw",
              "Width": 16,
              "Height": 16,
              "ColorMask": "Tomato"
            },
            // Hex color
            {
              "Texture": "Mods/{{ModId}}/rotation-bw",
              "Width": 16,
              "Height": 16,
              "ColorMask": "#6495ED"
            },
          ],
          "Motions": [
            // fixed position, always behind the player
            {
              "MotionClass": "Static",
              "AlwaysMoving": false,
              "DirectionMode": "R",
              "AnimationFrameLength": 4,
              "Interval": 200,
              "LayerDepth": "Behind"
            }
          ],
          "Abilities": [
            // level 0
            [
              {
                // Shoot debuff(frozen) projectile every 3s
                "ProcOn": "Timer",
                "ProcTimer": 3000,
                "AbilityClass": "Projectile",
                "Args": {
                  "DebuffId": "frozen",
                  "SpriteIndex": 17,
                  "Speed": 12,
                }
              }
            ]
          ]
        },
      }
    }
  ]
}