{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    {
      "LogName": "Stick: Sprites",
      "Action": "Load",
      "Target": "Mods/{{ModId}}/stick_1, Mods/{{ModId}}/stick_t",
      "FromFile": "assets/{{TargetWithoutPath}}.png"
    },
    {
      "LogName": "Stick: Trinkets",
      "Action": "EditData",
      "Target": "Data/Trinkets",
      "Entries": {
        "{{ModId}}_Stick": {
          "Id": "{{ModId}}_Stick",
          "DisplayName": "{{i18n:Stick.DisplayName}}",
          "Description": "{{i18n:Stick.Description}}",
          "Texture": "Mods/{{ModId}}/stick_t",
          "SheetIndex": 0,
          "DropsNaturally": false,
          "CanBeReforged": true
        },
      }
    },
    {
      "LogName": "Stick: Tinker",
      "Action": "EditData",
      "Target": "mushymato.TrinketTinker/Tinker",
      "Entries": {
        "{{ModId}}_Stick": {
          "Variants": [
            {
              "Texture": "Mods/{{ModId}}/stick_1",
              "Width": 16,
              "Height": 19,
              "ShadowScale": 0
            },
          ],
          "Motion": {
            "MotionClass": "Lerp",
            "DirectionMode": "R",
            "FrameLength": 3,
            "Anchors": [
              {
                "Mode": "Forage",
                "Range": 320
              },
              {
                "Mode": "Crop",
                "Range": 240
              },
            ],
            "AnimClips": {
              "Idle.0": {
                "FrameStart": 3,
                "FrameLength": 1
              },
            },
            "Args": {
              "Min": 32,
              "MoveSync": true
            }
          },
          "Abilities": [
            // level 1
            [
              {
                "AbilityClass": "HarvestForage",
                "Description": "{{i18n:Stick.AbilityDescription.1}}",
                "Proc": "Timer",
                "ProcTimer": 250,
                "ProcSound": "harvest",
                "Args": {
                  "Range": 1,
                },
              },
              {
                "AbilityClass": "Health",
                "Proc": "Sync",
                "Args": {
                  "ValueMode": "Number",
                  "Min": 44
                }
              },
            ],
            // level 2
            [
              {
                "AbilityClass": "HarvestCrop",
                "Description": "{{i18n:Stick.AbilityDescription.2}}",
                "Proc": "Timer",
                "ProcTimer": 1000,
                "ProcSound": "harvest",
                "Args": {
                  "Range": 0,
                },
              },
              {
                "AbilityClass": "Stamina",
                "Proc": "Sync",
                "Args": {
                  "ValueMode": "Number",
                  "Min": 44
                }
              }
            ],
            // level 3
            [
              {
                "AbilityClass": "HarvestForage",
                "Description": "{{i18n:Stick.AbilityDescription.3}}",
                "Proc": "Timer",
                "ProcTimer": 250,
                "ProcSound": "harvest",
                "Args": {
                  "Range": 1,
                },
              },
              {
                "AbilityClass": "HarvestCrop",
                "Proc": "Timer",
                "ProcTimer": 1000,
                "ProcSound": "harvest",
                "Args": {
                  "Range": 0,
                },
              },
              {
                "AbilityClass": "Health",
                "Proc": "Sync",
                "Args": {
                  "ValueMode": "Number",
                  "Min": 44
                }
              },
              {
                "AbilityClass": "Stamina",
                "Proc": "Sync",
                "ProcSyncIndex": 1,
                "Args": {
                  "ValueMode": "Number",
                  "Min": 44
                }
              }
            ],
          ]
        },
      }
    }
  ]
}